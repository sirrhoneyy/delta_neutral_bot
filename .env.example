# Delta-Neutral Bot Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# EXTENDED EXCHANGE CREDENTIALS
# =============================================================================
# Get these from: https://app.extended.exchange -> Account -> API Management

EXTENDED_API_KEY=your_extended_api_key_here
EXTENDED_STARK_PRIVATE_KEY=your_stark_private_key_here
EXTENDED_L2_KEY=your_l2_public_key_here
EXTENDED_VAULT=your_vault_number_here
EXTENDED_ACCOUNT_ID=your_account_id_here

# Network: mainnet or testnet
EXTENDED_NETWORK=mainnet

# =============================================================================
# TRADEXYZ (HYPERLIQUID) CREDENTIALS
# =============================================================================
# TradeXYZ uses Hyperliquid's API
# Generate via: https://app.hyperliquid.xyz -> Settings -> API

TRADEXYZ_WALLET_ADDRESS=your_wallet_address_here
TRADEXYZ_API_SECRET=your_api_secret_here

# Network: mainnet or testnet
TRADEXYZ_NETWORK=mainnet

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Simulation mode (HIGHLY RECOMMENDED for initial testing)
# true = paper trading, false = real funds
SIMULATION_MODE=true

# Logging verbosity: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# RISK PARAMETERS (Optional - defaults shown)
# =============================================================================

# Position sizing bounds (percentage of available balance)
MIN_EQUITY_USAGE=0.40
MAX_EQUITY_USAGE=0.80

# Leverage bounds
MIN_LEVERAGE=10
MAX_LEVERAGE=20

# Hold duration bounds (seconds)
MIN_HOLD_DURATION=1200    # 20 minutes
MAX_HOLD_DURATION=7200    # 2 hours

# Cooldown between cycles (seconds)
MIN_COOLDOWN=600          # 10 minutes
MAX_COOLDOWN=3600         # 60 minutes

# =============================================================================
# SAFETY PARAMETERS (Optional - defaults shown)
# =============================================================================

# Maximum position value in USD (safety cap)
MAX_POSITION_VALUE_USD=100000

# Minimum balance required to trade (USD)
MIN_BALANCE_USD=100

# Maximum number of consecutive failures before halt
MAX_CONSECUTIVE_FAILURES=3

# Slippage tolerance (percentage)
MAX_SLIPPAGE_PERCENT=0.5

# =============================================================================
# ADVANCED (Usually don't need to change)
# =============================================================================

# API request timeout (seconds)
API_TIMEOUT=30

# WebSocket reconnection attempts
WS_RECONNECT_ATTEMPTS=5

# Order execution timeout (seconds)
ORDER_TIMEOUT=60
