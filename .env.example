# =============================================================================
# EXTENDED EXCHANGE CREDENTIALS
# =============================================================================
# Get these from: https://app.extended.exchange -> Account -> API Management

EXTENDED_API_KEY=your_api_key_here
EXTENDED_STARK_PRIVATE_KEY=0x_your_stark_private_key_here
EXTENDED_L2_KEY=0x_your_l2_key_here
EXTENDED_VAULT=your_vault_number
EXTENDED_ACCOUNT_ID=your_account_id
EXTENDED_NETWORK=mainnet

# =============================================================================
# TRADEXYZ (HYPERLIQUID) CREDENTIALS
# =============================================================================
# Get these from: https://app.hyperliquid.xyz -> Settings -> API

# API wallet (for signing orders)
TRADEXYZ_WALLET_ADDRESS=0x_your_api_wallet_address
TRADEXYZ_API_SECRET=0x_your_api_wallet_private_key
# Main wallet (your actual wallet - for balance/position queries)
TRADEXYZ_MAIN_WALLET_ADDRESS=0x_your_main_wallet_address
TRADEXYZ_NETWORK=mainnet

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

SIMULATION_MODE=true
LOG_LEVEL=INFO

MIN_LEVERAGE=5
MAX_LEVERAGE=10
MIN_EQUITY_USAGE=0.20
MAX_EQUITY_USAGE=0.50
